<header class="header-blue">
    <nav
            class="navbar navbar-dark navbar-expand-md navigation-clean-search"
    >
        <div class="container">
            <a class="navbar-brand" id='' href="/">Библиотека книг</a>
            <button
                    class="navbar-toggler"
                    data-toggle="collapse"
                    data-target="#navcol-1"
            >
              <span class="sr-only">Toggle navigation</span
              ><span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navcol-1">
                <ul class="nav navbar-nav col">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" href="/">Главная <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" href="/books/create">Создать книгу</a>
                    </li>
                </ul>

                <div class='col text-end'>
                    <% if (isAuthenticated) { %>
                        <a class="btn btn-light action-button" role="button" href="/user/me">
                            Личный кабинет
                        </a>

                        <form action="/user/logout" style='display: inline-flex' method="POST">
                            <button class="btn navbar-text" type="submit">Выйти <i class="fa-solid fa-arrow-right-from-bracket"></i></button>
                            <input type="hidden" name="_csrf" value="">
                        </form>
                    <%  } else { %>
                    <span class="navbar-text">
                        <a href="/user/login" class="login">Войти</a>
                    </span>
                    <a class="btn btn-light action-button" role="button" href="/user/signup">
                        Регистрация
                    </a>
                     <%  } %>

                </div>
            </div>
        </div>
    </nav>
</header>
<main class='container-fluid <%= additionalStyles %>'>
